  $red: #f3655d;
  
  
  
  /*===========================
  START // General Page/Layout
  ============================*/
  @import url(//fonts.googleapis.com/css?family=Bangers|Happy+Monkey);
  
  .texts {
    text-align: center;
  }
  .gifs {
    float: center;
    margin: 0 0 10px 10px;
  }
  
  #spiderman-gifs {
    width: 100px;
    hieght: 80px;
  }
  #flash-gifs {
    width: 100px;
    height: 80px;
  }
  
  #hulk-gifs {
    width: 120px;
    height: 100px;
  }
  
  #thor-gifs {
    width:170px;
    height: 100px;
  }
  
  /* LAYOUT */
  .whole-container {
    width: 100%;
    height: auto;
    margin: 0px;
  }
  
  section, 
  header {
    display: inline-block;
    width: 90%;
    height: auto;
    border-top: 1px solid $dkgrey;
  }
  
  .inner {
    max-width: 100%;
    margin: 0 auto;
    width: 90%;
    height: auto;
  }
  
  .double, 
  .triple, 
  .double.triple {
    max-width: 100%;
    display: block;
  }
  
  .left {
    float: left;
  }
  
  .right {
    float: right;
  }
  
  .half {
    width: 50%;
  }
  
  .third {
    width: 33.33%;
  }
  
  .two-thirds {
    width: 66.66%;
  }
  
  /* TYPOGRAPHY */
  
  h1, 
  h2, 
  h3, 
  h4, 
  h5 {
    font-family: "Bangers", sans-serif;
    color: $dkgrey;
  }
  
  p, 
  ul, 
  li, 
  ol {
    font-family: 'Happy Monkey', sans-serif;
    color: $dkgrey;
  }
  
  .blue {
    color: $blue;
  }
  
  .dkblue {
  	color: $dkblue;
  }
  
  .yellow {
    color: $yellow;
  }
  
  .orange {
    color: $orange;
  }
  
  .pink {
    color: $pink;
  }
  
  .green {
    color: $green;
  }
  
  .red {
  	color: $red
  }
  
